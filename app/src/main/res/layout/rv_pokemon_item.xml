<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/image_pokemon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/image_placeholder"
        app:layout_constraintDimensionRatio="4:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/image_pokemon"
        app:layout_constraintStart_toStartOf="@+id/image_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/image_pokemon"
        tools:text="PIKACHU" />

    <TextView
        android:id="@+id/txt_id_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_name_pokemon"
        app:layout_constraintStart_toStartOf="@+id/txt_name_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_pokemon"
        tools:text="1" />


</androidx.constraintlayout.widget.ConstraintLayout>